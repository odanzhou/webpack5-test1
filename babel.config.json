{
  "presets": [
    [
      "@babel/preset-env", {
        "useBuiltIns": "entry"
      }
    ],
    [
      "@babel/preset-react"
    ],
    [
      "@babel/preset-typescript"
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-react-jsx",
      {
        "throwIfNamespace": false, // defaults to true
        "runtime": "automatic" // defaults to classic
        // "importSource": "custom-jsx-library" // defaults to react
      }
    ]
  ]
}